{
  "browser": {
    "browserName": "chromium",
    "contextOptions": {
      "viewport": {
        "width": 1280,
        "height": 720
      }
    }
  },
  "capabilities": [
    "core",
    "core-tabs",
    "pdf"
  ],
  "outputDir": "./.playwright-mcp-output",
  "imageResponses": "allow",
  "timeouts": {
    "action": 5000,
    "navigation": 60000
  }
}
